@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 card-block card">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="text-black-50" asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label class="text-black-50" asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-success btn-block">Save</button>
            </form>
            <div class="row mt-3">
                <div class="col-12">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-default btn-md btn-block shadow text-center mb-2" style="background-color: #fff;">Back to Dashboard</a>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}