@model PetsFactory.Models.ViewModels.TestimonialViewModel

@{
    ViewData["Title"] = "Add Testimony";
}

@if (TempData["Error"] != null)
{

    <!-- display alert after "AddTestimonial" action for error -->
    <script src="~/assets/js/jquery-3.2.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.13.0/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function () {
            Swal.fire("Error", "@TempData["Error"]", "error");
        });
    </script>
}

<div class="page-wrapper">
    <!-- Page-header start -->
    <div class="page-header card">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <i class="icofont icofont icofont icofont-speech-comments bg-c-pink"></i>
                    <div class="d-inline">
                        

                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <i class="icofont icofont-home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="Index">Testimonials</a>
                            <i class="icofont icofont-comment"></i>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="!#">Add Testimony</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Page-header end -->

    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-block">
                        <h4 class="sub-title">Add testimonial</h4>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <!-- pets -->
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Select Pet</label>
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(m => m.TestimonialObj.PetId, Model.PetSelectList, "- select a pet -", new { @class = "form-control" })

                                </div>
                            </div>

                            <!-- comment message -->
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Description</label>
                                <div class="col-sm-10">
                                    <textarea rows="5" cols="5" class="form-control" asp-for="TestimonialObj.CommentMessage"
                                              placeholder="Comment Message"></textarea>
                                </div>
                            </div>

                            <div class="d-flex justify-content-around">
                                <input type="submit" class="btn btn-success" value="Submit" />
                                <a class="btn btn-dark" asp-action="Index">Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
