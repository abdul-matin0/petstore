@model IEnumerable<Notifications>
@{
    ViewData["Title"] = "Notificatoins";
}

<div class="page-wrapper">
    <!-- Page-header start -->
    <div class="page-header card">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <i class="icofont icofont-alarm bg-c-blue"></i>
                    <div class="d-inline">
                        <h4>@ViewData["Title"]</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                                <i class="icofont icofont-home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            Notifications
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Page-header end -->



    <div class="page-body">
        <div class="row">
            <div class="col-md-8">
                <!-- notificaitons card -->
                <div class="card project-task">
                    <div class="card-header">
                        <div class="card-header-left ">
                            <h5>Notifications</h5>
                        </div>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="icofont icofont-simple-left "></i></li>
                                <li>
                                    <i class="icofont icofont-maximize full-card"></i>
                                </li>
                                <li>
                                    <i class="icofont icofont-minus minimize-card"></i>
                                </li>
                                <li>
                                    <i class="icofont icofont-refresh reload-card"></i>
                                </li>
                                <li>
                                    <i class="icofont icofont-error close-card"></i>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block p-b-10">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Title & Message</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            <div class="task-contain">

                                                <a onclick=Delete("/Admin/Notifications/Delete/@item.Id") class="btn btn-danger d-inline-block text-center">
                                                    <i class="icofont icofont-trash"></i>
                                                </a>
                                                <p class="d-inline-block m-l-20">
                                                    <span class="pr-2">@item.Title</span>  [@item.Message]
                                                </p>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="d-inline-block m-r-20">@item.DateAdded.ToString("dd MMM yy")</p>
                                            
                                        </td>
                                    </tr>
            }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- notifications end -->
            </div>
            <div class="d-flex col-md-4 mx-auto align-items-start">
                <div class="card fb-card">
                    <div class="card-header">
                        <i class="icofont icofont-plus"></i>
                        <div class="d-inline-block">
                            <h5>Total Notifications</h5>
                        </div>
                    </div>
                    <div class="card-block text-center">
                        <div class="row">
                            <div class="col-6">
                                <h2>@Model.Count()</h2>
                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
