@using PetsFactory.Utils 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetsFactory</title>

    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600" rel="stylesheet">
    <!-- bootstrap framework -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- icons -->
    <link rel="stylesheet" type="text/css" href="~/assets/icon/themify-icons/themify-icons.css">
    <!-- ico font -->
    <link rel="stylesheet" type="text/css" href="~/assets/icon/icofont/css/icofont.css">

    <!-- css -->
    <link rel="stylesheet" href="~/assets/css/style.css" />
    <link rel="stylesheet" href="~/assets/css/jquery.mCustomScrollbar.css" />
</head>
<body>

    <!-- Pre-loader start -->
    <div class="theme-loader">
        <div class="ball-scale">
            <div class='contain'>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">

                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
                <div class="ring">
                    <div class="frame"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Pre-loader end -->
    <div id="pcoded" class="pcoded">
        <div class="pcoded-overlay-box"></div>
        <div class="pcoded-container navbar-wrapper">

            <nav class="navbar header-navbar pcoded-header">
                <div class="navbar-wrapper">

                    <div class="navbar-logo">
                        <a class="mobile-menu" id="mobile-collapse" href="#!">
                            <i class="ti-menu"></i>
                        </a>
                        <a class="mobile-search morphsearch-search" href="#">
                            <i class="ti-search"></i>
                        </a>
                        <a asp-area="Customer" asp-controller="Dashboard" asp-action="Index">
                            PetsFactory
                        </a>
                        <a class="mobile-options">
                            <i class="ti-more"></i>
                        </a>
                    </div>

                    <div class="navbar-container container-fluid">
                        <ul class="nav-left">
                            <li>
                                <div class="sidebar_toggle">
                                    <a href="javascript:void(0)"><i class="ti-menu"></i></a>
                                </div>
                            </li>

                            <li>
                                <a href="#!" onclick="javascript:toggleFullScreen()">
                                    <i class="ti-fullscreen"></i>
                                </a>
                            </li>
                        </ul>
                        <ul class="nav-right">
                            <li class="header-notification">
                                <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    Logout
                                    <i class="ti-layout-sidebar-left"></i>
                                    
                                </a>
                            </li>

                            <li class="user-profile header-notification">
                                <a href="#!">
                                    
                                    <span>@User.Identity.Name</span>
                                    <i class="ti-angle-down"></i>
                                </a>
                                <ul class="show-notification profile-notification">
                                    <li>
                                        <a asp-area="Admin" asp-controller="PetsRequest" asp-action="Index">
                                            <i class="ti-receipt"></i> Pets Requests
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-area="Identity" asp-page="/Account/Manage/Index">
                                            <i class="ti-user"></i> Profile
                                        </a>
                                    </li>
                                    @if (User.IsInRole(Utilities.AdminUser))
                                    {
                                        <li>
                                            <a asp-area="Admin" asp-controller="Notifications" asp-action="Index">
                                                <i class="ti-email"></i>Notifications
                                            </a>
                                        </li>
                                    }
                                        

                                    <li>
                                        <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <i class="ti-layout-sidebar-left"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- top nav end -->
            <!-- main body -->
            <div class="pcoded-main-container">
                <div class="pcoded-wrapper">
                    <!-- side nav -->
                    <nav class="pcoded-navbar">
                        <div class="sidebar_toggle"><a href="#"><i class="icon-close icons"></i></a></div>
                        <div class="pcoded-inner-navbar main-menu">
                            <div class="">
                                <div class="main-menu-header">
                                    
                                    <div class="user-details d-flex justify-content-around">
                                        <span>@User.Identity.Name.ToUpper()</span>
                                        <span id="more-details"><i class="ti-angle-down"></i></span>
                                    </div>
                                </div>

                                <div class="main-menu-content">
                                    <ul>
                                        <li class="more-details">
                                            <a asp-area="Identity" asp-page="/Account/Manage/Index"><i class="ti-user"></i>View Profile</a>
                                            <a asp-area="Admin" asp-controller="PetsRequest" asp-action="Index"><i class="ti-receipt"></i>Requests</a>
                                            @if (User.IsInRole(Utilities.AdminUser))
                                            {
                                            
                                                <a asp-area="Admin" asp-controller="Notifications" asp-action="Index">
                                                    <i class="ti-email"></i>Notifications
                                                </a>
                                            
                                            }
                                            <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                                <i class="ti-layout-sidebar-left"></i>Logout
                                            </a>
                                            </li>
                                        </ul>
                                </div>
                            </div>




                            @if (User.IsInRole(Utilities.AdminUser))
                            {
                                <div class="pcoded-navigatio-lavel" data-i18n="nav.category.navigation">Admin Dashboard</div>

                                <!-- admin dashboard -->
                        <ul class="pcoded-item pcoded-left-item">
                            <!-- admin dashboard side nav -->
                            <li class="active">
                                <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                                    <span class="pcoded-micon"><i class="ti-home"></i><b>D</b></span>
                                    <span class="pcoded-mtext" data-i18n="nav.dash.main">Dashboard</span>
                                    <span class="pcoded-mcaret"></span>
                                </a>
                            </li>
                            <!-- admin dashboard side nav end -->
                            <!-- admin pets categories side nav -->
                            <li class="pcoded-hasmenu active">
                                <a href="javascript:void(0)">
                                    <span class="pcoded-micon"><i class="ti-layout-grid2-alt"></i></span>
                                    <span class="pcoded-mtext"
                                          data-i18n="nav.basic-components.main">Pets Categories</span>
                                    <span class="pcoded-mcaret"></span>
                                </a>
                                <ul class="pcoded-submenu">
                                    <li class=" ">
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Index">
                                            <span class="pcoded-micon"><i class="ti-angle-right"></i></span>
                                            <span class="pcoded-mtext"
                                                  data-i18n="nav.basic-components.alert">View All Categories</span>
                                            <span class="pcoded-mcaret"></span>
                                        </a>
                                    </li>
                                    <li class=" ">
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Upsert">
                                            <span class="pcoded-micon"><i class="ti-angle-right"></i></span>
                                            <span class="pcoded-mtext"
                                                  data-i18n="nav.basic-components.breadcrumbs">Add New Category</span>
                                            <span class="pcoded-mcaret"></span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <!-- admin pets category end -->
                            <!-- admin pets side nav -->
                            <li class="pcoded-hasmenu active">
                                <a href="javascript:void(0)">
                                    <span class="pcoded-micon"><i class="icofont icofont-animal-dog"></i></span>
                                    <span class="pcoded-mtext"
                                          data-i18n="nav.basic-components.main">Pets</span>
                                    <span class="pcoded-mcaret"></span>
                                </a>
                                <ul class="pcoded-submenu">
                                    <li class=" ">
                                        <a asp-area="Admin" asp-controller="Pets" asp-action="Index">
                                            <span class="pcoded-micon"><i class="ti-angle-right"></i></span>
                                            <span class="pcoded-mtext"
                                                  data-i18n="nav.basic-components.alert">View All Pets</span>
                                            <span class="pcoded-mcaret"></span>
                                        </a>
                                    </li>
                                    <li class=" ">
                                        <a asp-area="Admin" asp-controller="Pets" asp-action="Upsert">
                                            <span class="pcoded-micon"><i class="ti-angle-right"></i></span>
                                            <span class="pcoded-mtext"
                                                  data-i18n="nav.basic-components.breadcrumbs">Add New Pet</span>
                                            <span class="pcoded-mcaret"></span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <!-- admin pets end -->
                            <!-- admin notification side nav -->
                            <li class="active">
                                <a asp-area="Admin" asp-controller="Notifications" asp-action="Index">
                                    <span class="pcoded-micon"><i class="ti-bell"></i><b>D</b></span>
                                    <span class="pcoded-mtext" data-i18n="nav.dash.main">Notifications</span>
                                    <span class="pcoded-mcaret"></span>
                                </a>
                            </li>
                            <!-- admin notifications side nav end -->
                            <!-- admin dashboard side nav -->
                            <li class="active">
                                <a asp-area="Admin" asp-controller="PetsRequest" asp-action="Index">
                                    <span class="pcoded-micon"><i class="ti-receipt"></i><b>D</b></span>
                                    <span class="pcoded-mtext" data-i18n="nav.dash.main">Requests</span>
                                    <span class="pcoded-mcaret"></span>
                                </a>
                            </li>
                            <!-- admin dashboard side nav end -->


                        </ul>
                                <!-- admin dashboard end -->
                            }

                            <!-- customer dashboard -->
                            <div class="pcoded-navigatio-lavel" data-i18n="nav.category.forms">Customer Dashboard</div>
                            <ul class="pcoded-item pcoded-left-item">
                                <li>
                                    <a asp-area="Customer" asp-controller="Dashboard" asp-action="Index">
                                        <span class="pcoded-micon"><i class="icofont icofont-home"></i><b>FC</b></span>
                                        <span class="pcoded-mtext" data-i18n="nav.form-components.main">
                                            Home Dashboard
                                        </span>
                                        <span class="pcoded-mcaret"></span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="PetsRequest" asp-action="Index">
                                        <span class="pcoded-micon"><i class="icofont icofont-animal-dog-alt"></i><b>FC</b></span>
                                        <span class="pcoded-mtext" data-i18n="nav.form-components.main">
                                            Pets Requests
                                        </span>
                                        <span class="pcoded-mcaret"></span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="Customer" asp-controller="Testimonial" asp-action="Index">
                                        <span class="pcoded-micon"><i class="ti-comment-alt"></i><b>FC</b></span>
                                        <span class="pcoded-mtext" data-i18n="nav.form-components.main">
                                            Testimonials
                                        </span>
                                        <span class="pcoded-mcaret"></span>
                                    </a>
                                </li>

                            </ul>

                            
                        </div>
                    </nav>
                    <!-- side nav end -->
                    <!-- main content -->
                    <div class="pcoded-content">
                        <div class="pcoded-inner-content">
                            <!-- main body -->
                            <div class="main-body">
                                @RenderBody()
                                <div id="styleSelector"></div>
                            </div>
                        </div>
                    </div>
                    <!-- main content end -->
                </div>
            </div>

        </div>
    </div>

    <!-- jquery -->
    <script src="~/assets/js/jquery-3.2.1.min.js"></script>

    <script src="~/assets/js/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/assets/js/popper.js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jquery slim scroll -->
    <script src="~/assets/js/jquery-slimscroll/jquery.slimscroll.js"></script>

    <!-- AM Chart -->
    <script src="~/assets/js/amchart/amcharts.min.js"></script>
    <script src="~/assets/js/amchart/serial.min.js"></script>

    <!-- custom js -->
    <script src="~/assets/js/dashboard/custom-dashboard.js"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="~/assets/js/SmoothScroll.js"></script>

    <script src="~/assets/js/pcoded.min.js"></script>
    <script src="~/assets/js/demo-12.js"></script>
    <script src="~/assets/js/jquery.mCustomScrollbar.concat.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.13.0/dist/sweetalert2.all.min.js"></script>
    <script>
        var $window = $(window);
        var nav = $('.fixed-button');
        $window.scroll(function () {
            if ($window.scrollTop() >= 200) {
                nav.addClass('active');
            } else {
                nav.removeClass('active');
            }
        });
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
